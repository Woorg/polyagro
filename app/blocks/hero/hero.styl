.slider
	display block
	+below(768px)
		display none
	&__list
		position relative
		&:after
			position absolute
			content ""
			bottom 40px
			left -30px
			z-index -1
			sprite($rect_med)

	&__item
		position relative
		background #848484
		+below(768px)
			height 375px
	&__item-img
		max-width 100%
		height auto
		max-height 1000px
	.owl-item
		img
			max-width 100%
			height auto
	&__item-content
		position absolute
		top 50%
		// top 384px
		left 0
		padding 0 40px
		width 624px
		transform translateY(-50%)
		+below(768px)
			width 100%
	&__item-title
		margin-bottom 24px
		@extends .title
		letter-spacing tracking(-15)
		+below(768px)
			font-size 43px
		+below(600px)
			font-size 26px
	&__item-text
		margin-bottom 32px
		margin-bottom remify(32px)
		color #262626
		font-family $clearsans-med
		font-size 16px
		font-weight normal
		line-height 30px
		@extends .wysiwyg
		+below(600px)
			p
				font-size 12px
	.owl-stage-outer
		margin-bottom 8px
	.owl-dots
		width 100%
		font-size 0
		text-align center
	.owl-dot
		margin-left 10px
		display inline-block
		vertical-align top
		padding-top 10px
		padding-bottom 10px
		&:first-child
			margin-left 0
		span
			position relative
			display block
			width 30px
			height 2px
			background-color #e1e1e1
			transition background-color .3s ease
			&:after
				position absolute
				top -3px
				left 12px
				content ""
				display block
				visibility hidden
				width 0
				height 0
				transition visibility  .3s ease
		&.active
			span
				background #0078BF
				&:after
					visibility visible
					border-style solid
					border-width 0 3px 3px 3px
					border-color transparent transparent #0078bf transparent
		&:hover
			span
				background #737372
				&:after
					visibility visible
					border-style solid
					border-width 0 3px 3px 3px
					border-color transparent transparent #737372 transparent
