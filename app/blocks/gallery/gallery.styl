.gallery
	display block

	&__title
		margin-bottom 30px
		@extends .title_style-second

.carousel
	margin-bottom 30px
	.owl-item
		img
			max-width 100%
			height auto
	.owl-stage-outer
		padding-bottom 10px
	.owl-dots
		width 100%
		font-size 0
		text-align center
		line-height 1
	.owl-dot
		margin-left 10px
		display inline-block
		vertical-align top
		padding-top 10px
		padding-bottom 10px
		&:first-child
			margin-left 0
		span
			position relative
			display block
			width 30px
			height 2px
			background-color #e1e1e1
			transition background-color .3s ease
			&:after
				position absolute
				top -3px
				left 12px
				content ""
				display block
				visibility hidden
				width 0
				height 0
				transition visibility  .3s ease
		&.active
			span
				background #0078BF
				&:after
					visibility visible
					border-style solid
					border-width 0 3px 3px 3px
					border-color transparent transparent #0078bf transparent
		&:hover
			span
				background #737372
				&:after
					visibility visible
					border-style solid
					border-width 0 3px 3px 3px
					border-color transparent transparent #737372 transparent


		img
			max-width 100%
			height auto
			display block
