.wysiwyg
	p
		color #262626
		font-family $clearsans-med
		font-size 16px
		font-size remify(16px)

		font-weight normal
		line-height 30px
		line-height em(30,16)
		+below(1126px)
			font-size 14px
			font-size remify(14px)
	img
		max-width 100%
		height auto
		display block

	.float-right
		margin-left 22px
		margin-bottom 22px
		float right
	.float-left
		margin-right 22px
		margin-bottom 22px
		float left

.wysiwyg-scnd
