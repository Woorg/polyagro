.social
	// &__list
	&__title
		margin-bottom 0px
		color #fff
		font-family $clearsans-med
		font-size 16px
		font-weight normal
		line-height 30px
	&__item
		margin-bottom 0
	&__link
		color #FFF
		text-decoration none
		transition color .3s ease
	&__icon
		margin-right 10px
		width 18px
		display inline-block
		vertical-align middle
		fill #fff
		&_fb-icon
			// width 9px
			height 16px
		&_vk-icon
			// width 16px
			height 9px
		&_ok-icon
			// width 10px
			height 16px
		&_ytb-icon
			// width 16px
			height 11px
		&_twit-icon
			// width 16px
			height 13px
	&__link
		&:hover
			color #79b734
			text-decoration underline
			.social__icon
				fill #79b734
		&:active
			text-decoration underline
			color #0e527a
			.social__icon
				fill #0e527a

.social
	&_big
		width 100%
		.social__list
			font-size 0
		.social__item
			margin-left 17px
			margin-left ratio-percentage(17,380)
			display inline-block
			vertical-align top
			&:first-child
				margin-left 0
		.social__link
			display block
		.social__icon
			position relative
			width 40px
			height 40px
			margin-right 0
			border-radius 50%
			svg
				position absolute
				top 0
				left 0
				bottom 0
				right 0
				margin auto
				fill #fff
			&_fb-icon
				svg
					width 11px
					height 20px
			&_vk-icon
				svg
					width 20px
					height 11px
			&_ok-icon
				svg
					width 12px
					height 20px
			&_ytb-icon
				svg
					width 20px
					height 14px
			&_twit-icon
				svg
					width 20px
					height 17px

		.social__link
			&:hover
				.social__icon
					background #FFF
					&_fb-icon
						svg
							fill #3b5998
					&_vk-icon
						svg
							fill #5b7aa8
					&_ok-icon
						svg
							fill #e27e35
					&_ytb-icon
						svg
							fill #f33
					&_twit-icon
						svg
							fill #55acee
		.social__link
			&:active
				.social__icon
					background #FFF
					svg
						opacity 0.5
					&_fb-icon
						svg
							fill #3b5998
					&_vk-icon
						svg
							fill #5b7aa8
					&_ok-icon
						svg
							fill #e27e35
					&_ytb-icon
						svg
							fill #f33
					&_twit-icon
						svg
							fill #55acee


