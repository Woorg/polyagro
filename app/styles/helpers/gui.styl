.in
	margin auto
	padding-left 10px
	// padding-left ratio-percentage(10,1180)
	padding-right 10px
	// padding-right ratio-percentage(10,1180)
	max-width 1200px

.button
	padding 16px 50px 14px
	// padding 16px 50px 14px
	display inline-block
	vertical-align top
	background $button-bg
	color $button-text-color
	font-family $clearsans-bld
	font-size 12px
	font-weight normal
	line-height 20px
	text-transform uppercase
	text-decoration none
	letter-spacing tracking(100)
	transition background .3s ease
	&:hover
		background $button-bg-hover
	&:active
		background $button-bg-active
	&_style-second
		padding 16px 30px 14px
		background $button-second-bg
		&:hover
			background $button-second-bg-hover
		&:active
			background $button-second-bg-active
	&_style-third
		padding 15px 40px 14px
		background $button-second-bg
		&:hover
			background $button-second-bg-hover
		&:active
			background $button-second-bg-active
	&_style-four
		padding 16px 50px 14px
		background $button-second-bg
		&:hover
			background $button-second-bg-hover
		&:active
			background $button-second-bg-active


.order-button
	margin-bottom 50px
	&__button-w
		text-align center
		margin-top -22px
		text-align center
		overflow hidden
	&__button
		position relative
		display inline-block
		.button
			// position relative
			@extends .button_style-second
		&:after,
		&:before
			position absolute
			top 18px
			content ""
			width 910px
			height 22px
			z-index 0
		&:after
			right 226px
			background url('../images/general/section-lines-left.png') 67px 0 no-repeat
		&:before
			left 230px
			background url('../images/general/section-lines-right.png') -72px 0 no-repeat

.download
	display inline-block
	text-indent -9999px
	sprite($download)
	&:hover
		sprite($download_hover)

.title
	color #0069b7
	font-family $raleway-bld
	font-size 70px
	font-weight normal
	line-height 80px
	line-height em(80,70)
	text-transform uppercase
	+below(1126px)
		font-size 43px
	&_style-second
		color #79b734
		font-family $raleway-bld
		font-size 50px
		font-weight normal
		line-height 71px
		line-height em(71,50)
		text-transform uppercase
		+below(1126px)
			font-size 31px
		+below(406px)
			font-size 19px
